{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "api/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*\\.(js|jsx|json|css|map|html))", "dest": "client/$1" },
    { "src": "/.*", "dest": "client/index.html" }
  ]
}
